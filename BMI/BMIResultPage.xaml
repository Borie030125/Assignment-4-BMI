<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BMI.BMIResultPage"
    Title="BMI Result">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label x:Name="BMIValueLabel" Text="BMI:" FontSize="24" HorizontalOptions="Center" />
        <Label x:Name="BMICategoryLabel" Text="Category:" FontSize="20" HorizontalOptions="Center" />

        <Button Text="View Health Recommendations" Clicked="OnViewRecommendations" />
        <Button Text="Back to Input" Clicked="OnBackToInput" />
    </VerticalStackLayout>
</ContentPage>
